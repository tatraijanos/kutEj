var tomb = [];
var m=0;
var v=0;

window.onload = function(e){

    tomb=arrayFromPhp;
    chn_met(document.getElementById('metod').options.selectedIndex);
    //console.log(arrayFromPhp);
    //console.log(tomb)
};

function chn_met(metod){
    //globalis valtozok
    m=metod;
    v=0;

    len=document.getElementById('inter').options.length;

    //metodusok kozul 0-val egyenlo es nagyobb indexu elem valasztasa eseten
    if (metod>=0 && (typeof tomb[m][v][0]!=='undefined') && tomb[m][v][0]!=null && tomb[m][v][0]!=""){
        //Elemek torlese
        for(i=0;i<len;i++)
        {
            document.getElementById('inter').options[0] = null;
        }
        //szalak szama alapertelmezett ertekre allitasa
        document.getElementById('szal').value='1';
        //szal szam maximumanak meghatarozasa
        document.getElementById('szal').max=tomb[metod][v][1];
        var t=tomb[metod];
        var hatvany = [];
        //spl=[];
        //console.log(t);
        for(i=0;i<t.length;i++){

            hatvany[0]=("1 - "+Math.pow(10,t[i][0]));
            hatvany[1]=Math.pow(10,t[i][0]);

            //console.log(hatvany[0]);
            //spl[i]=(t[i][0].split("|"));
            newOptionName = new Option(hatvany[0],hatvany[1]);
            document.getElementById('inter').options[i]=newOptionName;
        }
    }

    else{

        console.log('Tomb Hiba!');
        //document.getElementById('metod').options;

    }
}

function chn_inter(interv){
        v=interv;
        s=tomb[m][interv];
        /*console.log(s);
         console.log(document.getElementById('inter').options.selectedIndex);
         console.log(interv);*/

        document.getElementById('szal').value='1';
        document.getElementById('szal').max=s[1];
}